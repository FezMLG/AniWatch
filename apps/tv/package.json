{
  "name": "@aniwatch/tv",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "16",
    "npm": "please-use-yarn",
    "yarn": "1"
  },
  "packageManager": "yarn",
  "scripts": {
    "android": "react-native run-android",
    "android:staging": "react-native run-android --variant=stagingdebug --appId=com.aniwatchtv.stg",
    "android:staging-release": "react-native run-android --variant=stagingrelease",
    "android:dev": "react-native run-android --variant=developmentdebug --appId=com.aniwatchtv.dev",
    "android:dev-release": "react-native run-android --variant=developmentrelease",
    "android:prod": "react-native run-android --variant=productiondebug --appId=com.aniwatchtv",
    "android:prod-release": "react-native run-android --variant=productionrelease",
    "ios": "react-native run-ios --simulator=\"iPhone 14\"",
    "ios:tv": "react-native run-ios --simulator=\"Apple TV\" --scheme=\"AniWatchTV-tvOS\"",
    "pod": "npx pod-install ios",
    "start": "react-native start",
    "start:clear": "react-native start --reset-cache",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "app:release": "cd android && ./gradlew bundleRelease",
    "apk:beta:release": "cd android && fastlane beta && open app/build/outputs/apk/production/release",
    "apk:release": "cd android && ./gradlew assembleRelease && open app/build/outputs/apk/production/release"
  },
  "dependencies": {
    "react": "18.0.0",
    "react-native": "npm:react-native-tvos@0.69.6-0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.68.0",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "react-test-renderer": "18.0.0",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "@types/react": "^18"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
